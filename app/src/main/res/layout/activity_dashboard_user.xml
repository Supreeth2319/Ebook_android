<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context=".DashboardUserActivity">

    <RelativeLayout
        android:id="@+id/toolbarR1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="USER DASHBOARD"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:layout_centerHorizontal="true"
            android:text="abc@xyz.com"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_logout" />


    </RelativeLayout>

    <TextView
        android:id="@+id/categoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarR1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="CHOOSE A CATEGORY TO READ"
        android:textColor="@color/white"
        android:fontFamily="serif-monospace"
        android:textSize="25dp" />

    <Button
        android:id="@+id/fiction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoo"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="FICTION"
        android:textSize="20dp" />

    <Button
        android:id="@+id/actionn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fiction"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="ACTION AND ADVENTURE"
        android:textSize="20dp" />

    <Button
        android:id="@+id/classics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionn"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="CLASSICS"
        android:textSize="20dp" />

    <Button
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classics"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="HISTORICAL FICTION"
        android:textSize="20dp" />

    <Button
        android:id="@+id/fantasy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="FANTASY"
        android:textSize="20dp" />

    <Button
        android:id="@+id/kids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fantasy"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="KIDS BOOKS"
        android:textSize="20dp" />

    <Button
        android:id="@+id/selfhelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kids"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="SELF HELP BOOKS"
        android:textSize="20dp" />

    <Button
        android:id="@+id/magazines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selfhelp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="MAGAZINES"
        android:textSize="20dp" />


</RelativeLayout>